# File managed by Puppet

[main]
    vardir = <%= @puppet_vardir %>
    ssldir = <%= @puppet_ssldir %>
    logdir = <%= @puppet_logdir %>
    rundir = <%= @puppet_rundir %>
    modulepath = <%= @puppet_config_path %>/modules:/opt/puppet/share/puppet/modules
    user  = <%= @puppet_user %>
    group = <%= @puppet_group %>
    archive_files = true
    archive_file_server = <%= @puppetmaster %>

[agent]
    environment = <%= @environment %>
    certname = <%= @fqdn %> 
    server = <%= @puppetmaster %>
    report = true
    classfile = $vardir/classes.txt
    localconfig = $vardir/localconfig
    graph = true
    pluginsync = true
    runinterval = <%= @runinterval %>
